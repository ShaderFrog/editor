{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "downlevelIteration": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@editor/*": ["./src/*"],
      "@editor-components/*": ["./src/editor/components/*"],
      "@public/*": ["./public/*"],
      // This enables the core site to use the symlinked version for dev
      "@core/*": ["./node_modules/@shaderfrog/core/*"],
      "@core": ["./node_modules/@shaderfrog/core"],
    },
    "composite": true,
    "noEmit": false,
    "incremental": true
  },
  "composite": true,
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
